=========================
/etc/php/7.2/fpm/php.ini
========================

post_max_size = 1024M                                                                                                            
upload_max_filesize = 1024M 
memory_limit = -1
max_execution_time = 24000
max_input_time = -1


=========================
/etc/nginx/nginx.conf
========================
